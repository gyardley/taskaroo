<!-- app/views/lists/new.html.erb -->

<h1>New List</h1>

  <% if @list.errors.any? %>
    <div class="alert alert-warning">
      <h4>There <%= @list.errors.count == 1 ? "is" : "are" %> <%= pluralize(@list.errors.count, "error") %>.</h4>
      <ul>
        <% @list.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-md-6">
    <%= form_for @list do |f| %>
      <div class="form-group">
        <%= f.label :name, "List name", class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Create", class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>