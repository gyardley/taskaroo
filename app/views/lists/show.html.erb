<!-- show.html.erb -->

<h2>
  <%= @list.name %> <small>
      <%= link_to "New Task", new_task_path, type: "button", class: "btn btn-link" %></small>
</h2>

<div class="row">
  <div class="col-xs-4">
    <ul class="list-group">
      <% @tasks.each do |task| %>
        <li class="list-group-item">
          <%= task.description %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="col-xs-2">
  <%= link_to "Edit List", edit_list_path(@list), class: 'btn btn-primary btn-lg btn-block' %>
</div>
<div class="col-xs-2">
  <%= link_to "Delete List", @list, method: :delete, class: 'btn btn-primary btn-lg btn-block' %>
</div>
