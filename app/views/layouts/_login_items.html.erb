<!-- app/views/layouts/_login_items.html.erb -->


<% if user_signed_in? %>
  <li>
    <!-- esdy: Need to figure out how to make this text not highlight when focused on. -->
    <a class="active">Signed in.</a>
  </li>
  <li class="divider-vertical"></li>
  <li>
    <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
  </li>
<% else %>
  <li>
    <%= link_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter) %>
  </li>
<% end %>